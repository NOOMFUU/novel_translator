    <script>
        const novelId = "<%= novel._id %>";
        let nextChapterNum = parseFloat("<%= nextChapterNumber %>");

        function switchTab(mode) {
            document.getElementById('section-auto').style.display = mode === 'auto' ? 'block' : 'none';
            document.getElementById('form-manual').style.display = mode === 'manual' ? 'block' : 'none';
            document.getElementById('tabBtnAuto').classList.toggle('active', mode === 'auto');
            document.getElementById('tabBtnManual').classList.toggle('active', mode === 'manual');
        }

        function toggleInput(type) {
            document.getElementById('input-text-group').style.display = type === 'text' ? 'block' : 'none';
            document.getElementById('input-file-group').style.display = type === 'file' ? 'block' : 'none';
        }

        async function handleSubmit(e, mode) {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);
            
            if(mode === 'auto') {
                formData.append('mode', 'auto');
                document.getElementById('form-auto').style.display = 'none';
                document.getElementById('ai-skeleton').style.display = 'block';
            }

            try {
                const res = await fetch(`/novel/${novelId}/chapters`, {
                    method: 'POST',
                    headers: { 'Accept': 'application/json' },
                    body: formData
                });
                const result = await res.json();

                if(result.success) {
                    showToast(`‚úÖ ‡∏ö‡∏±‡∏ô‡∏ó‡∏∂‡∏Å‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!`);
                    
                    if(mode === 'auto') {
                        document.getElementById('form-auto').style.display = 'block';
                        document.getElementById('ai-skeleton').style.display = 'none';
                        form.reset();
                    } else {
                        // Manual: ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏•‡∏Ç‡∏ï‡∏≠‡∏ô‡∏ñ‡∏±‡∏î‡πÑ‡∏õ‡πÉ‡∏´‡πâ‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏•‡∏á‡∏ï‡∏≠‡∏ô‡∏ï‡πà‡∏≠‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢
                        nextChapterNum += 1;
                        document.getElementById('manualChapterNumber').value = nextChapterNum;
                        document.getElementById('manualTitle').value = "";
                        document.getElementById('manualTranslated').value = "";
                        document.getElementById('smartPasteInput').value = "";
                        document.getElementById('manualTitle').focus();
                    }
                } else {
                    throw new Error(result.message);
                }
            } catch(err) {
                showToast('‚ùå Error: ' + err.message, 'error');
                if(mode === 'auto') {
                    document.getElementById('form-auto').style.display = 'block';
                    document.getElementById('ai-skeleton').style.display = 'none';
                }
            }
        }

        function detectHeader() {
            const input = document.getElementById('smartPasteInput').value;
            if (!input.trim()) return;
            const lines = input.split('\n');
            const match = lines[0].trim().match(/^(?:‡∏ï‡∏≠‡∏ô‡∏ó‡∏µ‡πà|‡∏ö‡∏ó‡∏ó‡∏µ‡πà|Chapter|Ep|Episode|Á¨¨)?\s*(\d+(\.\d+)?)\s*[:Ôºö.\s]?\s*(.*)$/i);
            
            if (match) {
                document.getElementById('manualChapterNumber').value = match[1];
                document.getElementById('manualTitle').value = match[3] ? `‡∏ï‡∏≠‡∏ô‡∏ó‡∏µ‡πà ${match[1]} : ${match[3]}` : `‡∏ï‡∏≠‡∏ô‡∏ó‡∏µ‡πà ${match[1]}`;
                document.getElementById('manualTranslated').value = lines.slice(1).join('\n').trim();
            } else {
                document.getElementById('manualTitle').value = lines[0];
                document.getElementById('manualTranslated').value = lines.slice(1).join('\n').trim();
            }
        }

        function clearManualForm() {
            if(confirm('‡∏•‡πâ‡∏≤‡∏á‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î?')) {
                document.getElementById('form-manual').reset();
                document.getElementById('manualChapterNumber').value = nextChapterNum;
            }
        }

        function showToast(message, type = 'success') {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `<span>${message}</span>`;
            container.appendChild(toast);
            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }
        
        // CSS ‡πÄ‡∏û‡∏¥‡πà‡∏°‡πÄ‡∏ï‡∏¥‡∏°‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö Tab (‡πÉ‡∏™‡πà‡πÑ‡∏ß‡πâ‡πÉ‡∏ô‡∏ô‡∏µ‡πâ‡∏´‡∏£‡∏∑‡∏≠ style.css ‡∏Å‡πá‡πÑ‡∏î‡πâ)
        const style = document.createElement('style');
