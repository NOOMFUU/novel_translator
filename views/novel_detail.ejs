                                    <a href="/chapter/<%= chapter._id %>/edit" class="btn btn-sm btn-outline" style="background:var(--bg-card); width:28px; height:28px; padding:0; display:flex; align-items:center; justify-content:center;"><i class="fa-solid fa-pen" style="font-size:0.7rem;"></i></a>
                                    <form action="/chapter/<%= chapter._id %>?_method=DELETE" method="POST" onsubmit="return confirm('‡∏•‡∏ö‡∏ï‡∏≠‡∏ô‡∏ô‡∏µ‡πâ?')" style="margin:0;">
                                        <button type="submit" class="btn btn-sm btn-outline" style="color: var(--danger); background:var(--bg-card); border-color:transparent; width:28px; height:28px; padding:0;"><i class="fa-solid fa-trash" style="font-size:0.7rem;"></i></button>
                                    </form>
                                </div>
                            <% } %>
                        </div>
                    <% }) %>
                </div>
            <% } %>

            <% if (totalPages > 1) { %>
                <div class="pagination-container" style="display: flex; justify-content: center; gap: 6px; margin-top: 50px; flex-wrap: wrap;">
                    <% if (currentPage > 1) { %>
                        <a href="/novel/<%= novel._id %>?page=<%= currentPage - 1 %>&sort=<%= sortOrder %>&qChapter=<%= typeof chapterSearch !== 'undefined' ? chapterSearch : '' %>" 
                           class="btn btn-outline" style="width: 40px; height: 40px; padding:0; display:flex; align-items:center; justify-content:center;">
                           <i class="fa-solid fa-chevron-left"></i>
                        </a>
                    <% } %>

                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <% if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                             <a href="/novel/<%= novel._id %>?page=<%= i %>&sort=<%= sortOrder %>&qChapter=<%= typeof chapterSearch !== 'undefined' ? chapterSearch : '' %>" 
                               class="btn <%= currentPage === i ? 'btn-primary' : 'btn-outline' %>" 
                               style="width: 40px; height: 40px; padding: 0; display: flex; align-items: center; justify-content: center;">
                               <%= i %>
                            </a>
                        <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                            <span class="text-muted" style="align-self: flex-end; padding: 0 5px;">...</span>
                        <% } %>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <a href="/novel/<%= novel._id %>?page=<%= currentPage + 1 %>&sort=<%= sortOrder %>&qChapter=<%= typeof chapterSearch !== 'undefined' ? chapterSearch : '' %>" 
                           class="btn btn-outline" style="width: 40px; height: 40px; padding:0; display:flex; align-items:center; justify-content:center;">
                           <i class="fa-solid fa-chevron-right"></i>
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        const novelId = "<%= novel._id %>";
        
        async function toggleFavorite() {
            try {
                const res = await fetch(`/novel/<%= novel._id %>/favorite`, { method: 'POST', headers: {'Accept': 'application/json'} });
                const data = await res.json();
                const btn = document.getElementById('fav-btn');
                const icon = btn.querySelector('i');
                const text = document.getElementById('fav-text');
                
                if (data.isFav) { 
                    btn.classList.remove('btn-outline'); btn.classList.add('btn-primary');
                    icon.classList.remove('fa-regular'); icon.classList.add('fa-solid');
                    text.innerText = '‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡πÅ‡∏•‡πâ‡∏ß';
                    showToast('‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ô‡∏¥‡∏¢‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß', 'success');
                } else { 
                    btn.classList.remove('btn-primary'); btn.classList.add('btn-outline');
                    icon.classList.remove('fa-solid'); icon.classList.add('fa-regular');
                    text.innerText = '‡∏Å‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°';
                    showToast('‡πÄ‡∏•‡∏¥‡∏Å‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡πÅ‡∏•‡πâ‡∏ß', 'info');
                }
            } catch(e) { console.error(e); }
        }

        function getReadHistory() {
            try {
                const raw = localStorage.getItem(`readHistory-${novelId}`);
                return raw ? JSON.parse(raw) : [];
            } catch(e) { return []; }
        }

        function checkReadHistory() {
            // 1. ‡∏õ‡∏∏‡πà‡∏°‡∏≠‡πà‡∏≤‡∏ô‡∏ï‡πà‡∏≠
            const lastRead = localStorage.getItem(`lastRead-${novelId}`);
            if (lastRead) {
                const btn = document.getElementById('continue-reading-btn');
                if(btn) {
                    btn.style.display = 'inline-flex';
                    // ‡∏õ‡∏£‡∏±‡∏ö‡πÉ‡∏´‡πâ‡∏õ‡∏∏‡πà‡∏°‡∏´‡∏≤‡∏Å‡∏±‡∏ô‡∏á‡πà‡∏≤‡∏¢‡∏Ç‡∏∂‡πâ‡∏ô‡∏ö‡∏ô mobile
                    btn.onclick = (e) => {
                        e.preventDefault();
                        window.location.href = `/chapter/${lastRead}`;
                    };
                }
            }
            // 2. Mark as read
            const history = getReadHistory();
            history.forEach(id => {
                const chapterItem = document.getElementById(`chapter-${id}`);
                if (chapterItem) {
                    chapterItem.classList.add('read');
                    const icon = chapterItem.querySelector('.fa-check-circle');
                    if(icon) icon.style.display = 'inline-block';
                }
            });
        }

        function setView(mode) {
            const container = document.getElementById('chapterContainer');
            const btnGrid = document.getElementById('btn-grid');
            const btnList = document.getElementById('btn-list');
            if(!container || !btnGrid || !btnList) return;
            
            if(mode === 'list') {
                container.classList.add('view-list');
                btnList.classList.add('active'); 
                btnList.classList.remove('btn-outline'); btnList.classList.add('btn-primary'); // Highlight style
                btnGrid.classList.remove('active');
                btnGrid.classList.remove('btn-primary'); btnGrid.classList.add('btn-outline');
            } else {
                container.classList.remove('view-list');
                btnGrid.classList.add('active'); 
                btnGrid.classList.remove('btn-outline'); btnGrid.classList.add('btn-primary'); // Highlight style
                btnList.classList.remove('active');
                btnList.classList.remove('btn-primary'); btnList.classList.add('btn-outline');
            }
            localStorage.setItem('chapterView', mode);
        }

        function showToast(msg, type='info') {
            const container = document.getElementById('toast-container');
            const div = document.createElement('div');
            div.className = `toast ${type}`;
            div.innerHTML = `<i class="fa-solid fa-info-circle"></i> ${msg}`;
            container.appendChild(div);
            setTimeout(() => div.remove(), 3000);
        }

        // Theme Toggler
        function toggleTheme() {
            const current = document.documentElement.getAttribute('data-theme');
            const next = current === 'light' ? 'dark' : (current === 'dark' ? 'sepia' : 'light');
            document.documentElement.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedView = localStorage.getItem('chapterView') || 'grid';
            setView(savedView);
            checkReadHistory(); 
            setTimeout(() => document.body.classList.remove('preload'), 100);
        });
    </script>
