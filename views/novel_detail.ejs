        <% if (isAdmin) { %>
            <div class="card d-flex align-center justify-between" style="border: 1px dashed var(--primary); background: rgba(99, 102, 241, 0.03); margin-bottom: 20px; padding: 15px;">
                <div class="d-flex align-center gap-3">
                    <div style="background: var(--primary); color: white; width: 40px; height: 40px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                    <div><h4 style="margin: 10px; font-size:1rem;">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ï‡∏≠‡∏ô‡πÉ‡∏´‡∏°‡πà</h4></div>
                </div>
                <a href="/novel/<%= novel._id %>/add" class="btn btn-primary btn-sm">‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ï‡∏≠‡∏ô <i class="fa-solid fa-arrow-right"></i></a>
            </div>
        <% } %>

        <div class="chapter-card">
            <div class="chapter-controls">
                <div>
                    <h3 style="margin:0; font-size: 1.3rem; font-weight: 700;">‡∏™‡∏≤‡∏£‡∏ö‡∏±‡∏ç</h3>
                    <span class="text-muted" style="font-size: 0.85rem;">‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î <%= totalChapters.toLocaleString() %> ‡∏ï‡∏≠‡∏ô</span>
                </div>

                <form action="/novel/<%= novel._id %>" method="GET" class="search-wrapper">
                    <input type="hidden" name="sort" value="<%= sortOrder %>"> 
                    <i class="fa-solid fa-magnifying-glass"></i>
                    <input type="text" name="qChapter" placeholder="‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏ï‡∏≠‡∏ô..." value="<%= typeof chapterSearch !== 'undefined' ? chapterSearch : '' %>">
                </form>

                <div class="d-flex gap-2">
                    <div style="display:flex; background:var(--bg-input); border-radius:8px; padding:2px;">
                        <button class="btn btn-sm active" id="btn-grid" onclick="setView('grid')" style="border-radius:6px; color:var(--text-muted); background:transparent; border:none;"><i class="fa-solid fa-border-all"></i></button>
                        <button class="btn btn-sm" id="btn-list" onclick="setView('list')" style="border-radius:6px; color:var(--text-muted); background:transparent; border:none;"><i class="fa-solid fa-list-ul"></i></button>
                    </div>
                    
                    <a href="/novel/<%= novel._id %>?sort=<%= sortOrder === 'newest' ? 'oldest' : 'newest' %>&qChapter=<%= typeof chapterSearch !== 'undefined' ? chapterSearch : '' %>" 
                    class="btn btn-outline btn-sm" style="border-radius:8px;">
                        <i class="fa-solid fa-arrow-down-up-across-line"></i> 
                        <span class="desktop-only"><%= sortOrder === 'newest' ? '‡∏•‡πà‡∏≤‡∏™‡∏∏‡∏î' : '‡πÅ‡∏£‡∏Å‡∏™‡∏∏‡∏î' %></span>
                    </a>
                </div>
            </div>

            <div id="chapterContainer" class="chapter-grid">
                <% if(chapters.length === 0) { %>
                    <div class="text-center text-muted" style="grid-column:1/-1; padding: 60px 0;">
                        <i class="fa-regular fa-folder-open" style="font-size: 3rem; opacity: 0.2; margin-bottom: 15px;"></i>
                        <p>‡πÑ‡∏°‡πà‡∏û‡∏ö‡∏ï‡∏≠‡∏ô‡∏ó‡∏µ‡πà‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤</p>
                    </div>
                <% } %>

                <% chapters.forEach(chapter => { %>
                    <div class="chapter-wrapper-outer" style="position:relative;">
                        <a href="/chapter/<%= chapter._id %>" class="chapter-item" id="chapter-<%= chapter._id %>">
                            <div style="flex:1; min-width:0;">
                                <div class="chapter-title text-truncate">
                                    <span style="color:var(--primary); font-weight:700; min-width:50px;">Ep.<%= chapter.chapterNumber %></span>
                                    <%= chapter.title.replace(/^‡∏ï‡∏≠‡∏ô‡∏ó‡∏µ‡πà \d+[:\s]*/, '') %>
                                </div>
                                <div class="chapter-meta">
                                    <span><%= new Date(chapter.createdAt).toLocaleDateString('th-TH') %></span>
                                    <i class="fa-solid fa-check-circle text-success" style="display:none; margin-left:5px;"></i>
                                </div>
                            </div>
                        </a>
                        <% if (isAdmin) { %>
                            <div style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); display: flex; gap: 5px; z-index: 2;">
                                <a href="/chapter/<%= chapter._id %>/edit" class="btn btn-sm btn-outline" style="width:28px; height:28px; padding:0; display:flex; align-items:center; justify-content:center; background:var(--bg-card);"><i class="fa-solid fa-pen" style="font-size:0.7rem;"></i></a>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            </div>

            <% if (totalPages > 1) { %>
                <div class="pagination-wrapper">
                    <a href="<%= currentPage > 1 ? `/novel/${novel._id}?page=${currentPage-1}&sort=${sortOrder}&qChapter=${typeof chapterSearch !== 'undefined' ? chapterSearch : ''}` : 'javascript:void(0)' %>" 
                       class="page-nav-btn <%= currentPage <= 1 ? 'disabled' : '' %>">
                        <i class="fa-solid fa-chevron-left"></i>
                    </a>

                    <form action="/novel/<%= novel._id %>" method="GET" class="page-input-group">
                        <input type="hidden" name="sort" value="<%= sortOrder %>">
                        <input type="hidden" name="qChapter" value="<%= typeof chapterSearch !== 'undefined' ? chapterSearch : '' %>">
                        
                        <span class="page-label">‡∏´‡∏ô‡πâ‡∏≤</span>
                        <input type="number" name="page" value="<%= currentPage %>" min="1" max="<%= totalPages %>" class="page-input" onfocus="this.select()" autocomplete="off">
                        <span class="page-label">/ <%= totalPages %></span>
                    </form>

                    <a href="<%= currentPage < totalPages ? `/novel/${novel._id}?page=${currentPage+1}&sort=${sortOrder}&qChapter=${typeof chapterSearch !== 'undefined' ? chapterSearch : ''}` : 'javascript:void(0)' %>" 
                       class="page-nav-btn <%= currentPage >= totalPages ? 'disabled' : '' %>">
                        <i class="fa-solid fa-chevron-right"></i>
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <div class="mobile-action-bar">
        <% if (user) { %>
            <button onclick="toggleFavorite()" id="mb-fav-btn" class="btn <%= isFav ? 'btn-primary' : 'btn-outline' %>" style="flex:1; border-radius:12px; padding:12px; font-weight:600;">
                <i class="fa-<%= isFav ? 'solid' : 'regular' %> fa-heart"></i>
                <span id="mb-fav-text"><%= isFav ? '‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°' : '‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°' %></span>
            </button>
        <% } %>
        
        <% if(totalChapters > 0) { %>
            <a href="<%= firstChapterUrl %>" id="mb-read-btn" class="btn btn-primary" style="flex:2; border-radius:12px; padding:12px; font-weight:600; box-shadow:0 4px 15px rgba(99,102,241,0.3);">
                <i class="fa-solid fa-book-open"></i> ‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏≠‡πà‡∏≤‡∏ô
            </a>
        <% } else { %>
             <button class="btn btn-outline" disabled style="flex:2; border-radius:12px;">‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ï‡∏≠‡∏ô</button>
        <% } %>
    </div>

    <script>
        const novelId = "<%= novel._id %>";
        
        async function toggleFavorite() {
            try {
                const res = await fetch(`/novel/<%= novel._id %>/favorite`, { method: 'POST', headers: {'Accept': 'application/json'} });
                const data = await res.json();
                
                // ‡∏≠‡∏±‡∏õ‡πÄ‡∏î‡∏ï‡∏õ‡∏∏‡πà‡∏°‡∏ó‡∏±‡πâ‡∏á Desktop ‡πÅ‡∏•‡∏∞ Mobile
                const updateBtn = (btnId, textId) => {
                    const btn = document.getElementById(btnId);
                    const icon = btn?.querySelector('i');
                    const text = document.getElementById(textId);
                    
                    if(btn && icon) {
                        if (data.isFav) { 
                            btn.classList.remove('btn-outline'); btn.classList.add('btn-primary');
                            icon.classList.remove('fa-regular'); icon.classList.add('fa-solid');
                            if(text) text.innerText = '‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡πÅ‡∏•‡πâ‡∏ß';
                        } else { 
                            btn.classList.remove('btn-primary'); btn.classList.add('btn-outline');
                            icon.classList.remove('fa-solid'); icon.classList.add('fa-regular');
                            if(text) text.innerText = '‡∏Å‡∏î‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°';
                        }
                    }
                };

                updateBtn('dt-fav-btn', 'dt-fav-text'); // Desktop
                updateBtn('mb-fav-btn', 'mb-fav-text'); // Mobile

                showToast(data.isFav ? '‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡∏ô‡∏¥‡∏¢‡∏≤‡∏¢‡πÅ‡∏•‡πâ‡∏ß' : '‡πÄ‡∏•‡∏¥‡∏Å‡∏ï‡∏¥‡∏î‡∏ï‡∏≤‡∏°‡πÅ‡∏•‡πâ‡∏ß', data.isFav ? 'success' : 'info');

            } catch(e) { console.error(e); }
        }

        function checkReadHistory() {
            const lastRead = localStorage.getItem(`lastRead-${novelId}`);
            if (lastRead) {
                // Update ‡∏ó‡∏±‡πâ‡∏á‡∏õ‡∏∏‡πà‡∏°‡∏ö‡∏ô‡πÅ‡∏•‡∏∞‡∏•‡πà‡∏≤‡∏á
                const updateReadBtn = (btnId) => {
                    const btn = document.getElementById(btnId);
                    if(btn) {
                        btn.href = `/chapter/${lastRead}`;
                        btn.innerHTML = `<i class="fa-solid fa-play"></i> ‡∏≠‡πà‡∏≤‡∏ô‡∏ï‡πà‡∏≠`;
                    }
                }
                updateReadBtn('dt-read-btn');
                updateReadBtn('mb-read-btn');
            }
            
            // Mark Read Chapters
            const history = JSON.parse(localStorage.getItem(`readHistory-${novelId}`) || '[]');
            history.forEach(id => {
                const item = document.getElementById(`chapter-${id}`);
                if (item) {
                    item.classList.add('read');
                    const icon = item.querySelector('.fa-check-circle');
                    if(icon) icon.style.display = 'inline-block';
                }
            });
        }

        function setView(mode) {
            const container = document.getElementById('chapterContainer');
            const btnGrid = document.getElementById('btn-grid');
            const btnList = document.getElementById('btn-list');
            if(!container || !btnGrid || !btnList) return;

            if(mode === 'list') {
                container.classList.remove('chapter-grid'); container.classList.add('chapter-grid', 'view-list');
                btnList.classList.add('active'); btnList.style.background = 'var(--bg-card)'; btnList.style.color = 'var(--primary)';
                btnGrid.classList.remove('active'); btnGrid.style.background = 'transparent'; btnGrid.style.color = 'var(--text-muted)';
            } else {
                container.classList.remove('view-list');
                btnGrid.classList.add('active'); btnGrid.style.background = 'var(--bg-card)'; btnGrid.style.color = 'var(--primary)';
                btnList.classList.remove('active'); btnList.style.background = 'transparent'; btnList.style.color = 'var(--text-muted)';
            }
            localStorage.setItem('chapterView', mode);
        }

        function showToast(msg, type='info') {
            const container = document.getElementById('toast-container');
            const div = document.createElement('div');
            div.className = `toast ${type}`;
            div.innerHTML = `<i class="fa-solid fa-circle-info"></i> ${msg}`;
            container.appendChild(div);
            setTimeout(() => {
                div.style.opacity = '0';
                div.style.transform = 'translateX(100%)';
                setTimeout(() => div.remove(), 300);
            }, 3000);
        }

        function toggleTheme() {
            const current = document.documentElement.getAttribute('data-theme');
            const next = current === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedView = localStorage.getItem('chapterView') || 'grid';
            // ‡∏ñ‡πâ‡∏≤‡πÄ‡∏õ‡πá‡∏ô‡∏°‡∏∑‡∏≠‡∏ñ‡∏∑‡∏≠ ‡πÉ‡∏´‡πâ default ‡πÄ‡∏õ‡πá‡∏ô list ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏≠‡πà‡∏≤‡∏ô‡∏á‡πà‡∏≤‡∏¢
            if(window.innerWidth < 768 && !localStorage.getItem('chapterView')) {
                setView('list');
            } else {
                setView(savedView);
            }
            checkReadHistory(); 
            setTimeout(() => document.body.classList.remove('preload'), 100);
        });
    </script>
</body>
</html>