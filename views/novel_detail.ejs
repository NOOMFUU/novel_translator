        .chapter-item.read { opacity: 0.6; background: transparent; }
        .chapter-item.read:hover { opacity: 1; }

        .chapter-title { font-weight: 500; font-size: 1rem; display: flex; align-items: center; gap: 8px; }
        .chapter-meta { font-size: 0.8rem; color: var(--text-muted); display: flex; align-items: center; gap: 5px; }

