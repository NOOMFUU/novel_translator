                <ul class="rank-list" id="rankList">
                    <% if (locals.topNovels) { %>
                        <% topNovels.forEach((novel, index) => { %>
                            <li>
                                <a href="/novel/<%= novel._id %>" class="rank-item">
                                    <span class="rank-number top-<%= index + 1 %>"><%= index + 1 %></span>
                                    <img src="<%= novel.imageUrl || defaultCover %>"
                                         onerror="this.onerror=null;this.src='<%= defaultCover %>';"
