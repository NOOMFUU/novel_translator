<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= chapter.title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .reader-container {
            max-width: 800px; margin: 0 auto;
            background: var(--bg-card);
            min-height: 100vh;
            box-shadow: 0 0 50px rgba(0,0,0,0.05);
            position: relative;
        }
        .reader-content {
            padding: 40px 30px 100px 30px;
            font-size: 18px; line-height: 1.8; color: var(--text-main);
        }
        .reader-nav {
            position: sticky; top: 0; z-index: 100;
            background: var(--bg-card);
            border-bottom: 1px solid var(--border);
            padding: 10px 20px;
            display: flex; justify-content: space-between; align-items: center;
        }
        .settings-bar {
            position: fixed; bottom: 0; left: 0; width: 100%;
            background: var(--bg-card);
            border-top: 1px solid var(--border);
            padding: 15px;
            display: flex; justify-content: center; gap: 20px;
            transform: translateY(100%); transition: 0.3s;
            z-index: 200;
        }
        .settings-bar.show { transform: translateY(0); }
    </style>
</head>
<body style="background: #e5e5e5;"> <div class="reader-container">
        <div class="reader-nav">
            <a href="/novel/<%= chapter.novelId._id %>" class="btn btn-sm btn-outline" style="border:none;"><i class="fa-solid fa-arrow-left"></i></a>
            <span style="font-weight: 600; font-size: 0.9rem; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 200px;">
                <%= chapter.title %>
            </span>
            <button onclick="toggleSettings()" class="btn btn-sm btn-outline" style="border:none;"><i class="fa-solid fa-font"></i></button>
        </div>

        <div class="reader-content" id="content">
            <h2 style="margin-bottom: 30px; color: var(--primary); text-align: center;"><%= chapter.title %></h2>
            <%- chapter.translatedContent.replace(/\n/g, '<br>') %>
        </div>

        <div style="padding: 20px; border-top: 1px solid var(--border); display: flex; justify-content: space-between; background: var(--bg-card);">
            <% if (prevChapter) { %>
                <a href="/chapter/<%= prevChapter._id %>" class="btn btn-outline">ตอนก่อน</a>
            <% } else { %>
                <button class="btn btn-outline" disabled>ตอนแรก</button>
            <% } %>

            <% if (nextChapter) { %>
                <a href="/chapter/<%= nextChapter._id %>" class="btn btn-primary">ตอนถัดไป <i class="fa-solid fa-arrow-right"></i></a>
            <% } else { %>
                <a href="/novel/<%= chapter.novelId._id %>" class="btn btn-primary">สารบัญ</a>
            <% } %>
        </div>
    </div>

    <div class="settings-bar" id="settingsBar">
        <button class="btn btn-outline" onclick="adjustFont(-2)">A-</button>
        <button class="btn btn-outline" onclick="adjustFont(2)">A+</button>
        <button class="btn btn-outline" onclick="toggleTheme()"><i class="fa-solid fa-moon"></i></button>
        <button class="btn btn-primary" onclick="toggleSettings()">ปิด</button>
    </div>

    <script>
        // Init Settings
        let fontSize = parseInt(localStorage.getItem('fontSize')) || 18;
        const content = document.getElementById('content');
        content.style.fontSize = fontSize + 'px';
        document.documentElement.setAttribute('data-theme', localStorage.getItem('theme') || 'light');

        function toggleSettings() {
            document.getElementById('settingsBar').classList.toggle('show');
        }

        function adjustFont(delta) {
            fontSize = Math.max(14, Math.min(32, fontSize + delta));
            content.style.fontSize = fontSize + 'px';
            localStorage.setItem('fontSize', fontSize);
        }

        function toggleTheme() {
            const next = document.documentElement.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
            document.documentElement.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
        }
    </script>
</body>
</html>